    <script>
 // Global variable to store the AWB number
let currentAwbNumber = '123456789'; // Replace this with actual AWB number from your page

// Function to format timestamp
function formatTimestamp(timestamp) {
    return new Date(timestamp).toLocaleString();
}

// Function to get icon based on status
function getStatusIcon(status) {
    const iconMap = {
        'shipped': 'box-seam',
        'in-transit': 'truck',
        'out-for-delivery': 'bicycle',
        'delivered': 'house-check'
    };
    return iconMap[status.toLowerCase()] || 'circle';
}

// Function to create timeline item HTML
function createTimelineItem(location, index, totalLocations) {
    const statusClass = location.isCompleted ? 'completed' : (index === totalLocations - 1 ? 'active' : '');
    const signatureField = location.status === 'delivered' ? `
        <div class="signature-field mt-3">
            <strong>Signed by:</strong> ${location.signedBy || 'Pending'}
        </div>
    ` : '';

    return `
        <div class="timeline-item" data-id="${location._id}">
            <div class="timeline-marker ${statusClass}">
                <i class="fas fa-check"></i>
            </div>
            <div class="timeline-content ${statusClass}">
                <div class="action-buttons">
                    <button class="btn-icon delete" onclick="deleteLocation('${location._id}')">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                <div class="location-info">
                    <h5>${location.name}</h5>
                    <p class="location-address mb-2">${location.address}</p>
                    <div class="d-flex align-items-center">
                        <span class="location-timestamp">${formatTimestamp(location.timestamp)}</span>
                        <span class="status-badge ${statusClass ? 'bg-success' : 'bg-primary'} ms-2">
                            ${location.status.replace('-', ' ')}
                        </span>
                    </div>
                    ${signatureField}
                </div>
            </div>
        </div>
    `;
}

// Function to update timeline display
function updateTimelineDisplay(locations) {
    const timelineContainer = document.getElementById('timelineItems');
    timelineContainer.innerHTML = locations.map((location, index) => 
        createTimelineItem(location, index, locations.length)
    ).join('');
    updateProgressLine(locations);
}

// Function to update progress line
function updateProgressLine(locations) {
    const progressLine = document.getElementById('progressLine');
    const completedCount = locations.filter(l => l.isCompleted).length;
    const progressHeight = (completedCount / locations.length) * 100;
    progressLine.style.height = `${progressHeight}%`;
}

// Function to fetch and display timeline
async function fetchTimeline() {
    try {
        const response = await fetch(`/api/timeline/${currentAwbNumber}`);
        if (!response.ok) throw new Error('Failed to fetch timeline');
        const timeline = await response.json();
        updateTimelineDisplay(timeline.locations);
    } catch (error) {
        console.error('Error fetching timeline:', error);
    }
}

// Function to delete location
async function deleteLocation(locationId) {
    if (!confirm('Are you sure you want to delete this location?')) return;

    try {
        const response = await fetch(`/api/timeline/${currentAwbNumber}/location/${locationId}`, {
            method: 'DELETE'
        });
        if (!response.ok) throw new Error('Failed to delete location');
        await fetchTimeline(); // Refresh timeline after deletion
    } catch (error) {
        console.error('Error deleting location:', error);
    }
}

// Add location form submission handler
document.getElementById('addLocationForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = {
        awbNumber: currentAwbNumber,
        name: document.getElementById('newLocationName').value,
        address: document.getElementById('newLocationAddress').value,
        status: document.getElementById('newLocationStatus').value
    };

    try {
        const response = await fetch('/api/timeline/addLocation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });

        if (!response.ok) throw new Error('Failed to add location');
        
        await fetchTimeline(); // Refresh timeline after adding location
        this.reset(); // Reset form
    } catch (error) {
        console.error('Error adding location:', error);
    }
});

// Initialize timeline on page load
document.addEventListener('DOMContentLoaded', () => {
    fetchTimeline();
});
    </script>
